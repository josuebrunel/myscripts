[user]
	name = Josue Kouka
	email = jkouka@entrouvert.com 
[color]
	ui = true
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[core]
	autocrlf = input
[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    pull-all = pull --recurse-submodules 
    update-all = submodule update --recursive
    update-init-all = submodule update --init --recursive
    pup = pull & git submodule init & git submodule update & git submodule status
[credential]
	helper = osxkeychain
	helper = cache --timeout=86400
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[push]
	default = matching
[pull]
    rebase = true 
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
